  <body>
    <div>
      <h1 id="heading">LinkHub</h1>
      <h1><%= textData %></h1>
      <h2>Now you can log in to LinkHub.</h2>
      <h2>You can now close this tab.</h2>
    </div>
  </body>
</html>
